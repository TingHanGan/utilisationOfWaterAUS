{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width":"container",
    "height": 300,
    "title": "Water Supply within Australia",
    "data": {"url": "https://raw.githubusercontent.com/TingHanGan/utilisationOfWaterAUS/main/Datasets/water_use_cleaned.csv"},
    "params": [
        {
          "name": "State_selection",
          "bind": {
            "input": "select",
            "options": [
              null,
              "Australia",
              "New South Wales",
              "Victoria",
              "Queensland",
              "South Australia",
              "Western Australia",
              "Tasmania",
              "Northern Territory",
              "Australian Capital Territory"
            ],
            "labels":[
              "Show All",
              "Australia",
              "New South Wales",
              "Victoria",
              "Queensland",
              "South Australia",
              "Western Australia",
              "Tasmania",
              "Northern Territory",
              "Australian Capital Territory"
            ],
            "name": "Region Selection: "
          }
        },
        {
          "name": "Industry_selection",
          "bind": {
            "input": "select",
            "options": [
              null,
              "Total agriculture",
              "Total Agriculture, forestry and fishing",
              "Total Electricity, gas, water and waste services",
              "Total industry",
              "Total manufacturing",
              "Total mining"
            ],
            "labels":[
              "Combined Total",
              "Total agriculture",
              "Total Agriculture, forestry and fishing",
              "Total Electricity, gas, water and waste services",
              "Total industry",
              "Total manufacturing",
              "Total mining"
            ],
            "name": "Industry Selection: "
          }
        }
      ],
      "transform": [
        {"filter": "Industry_selection == null || datum.Industry == Industry_selection"},
        {"filter": "State_selection == null || datum.State == State_selection"}
      ],
    "mark": {
      "type": "line",
      "point": true
      },
    "encoding": {
      "x": {"timeUnit": "year", "field": "Date", "type": "ordinal"},
      "y": {"aggregate":"sum", "field": "Value", "type": "quantitative", "title": "ML"},
      "color": {
        "field": "State",
        "scale": {"scheme": "greenblue"}
      },
      "tooltip": [
        {"field": "State", "type": "nominal", "title": "Region"},
        {"field": "Value", "type": "quantitative", "title": "ML", "aggregate": "sum", "format": ","}
      ]
    }
  }