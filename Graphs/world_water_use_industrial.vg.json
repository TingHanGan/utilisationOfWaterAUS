{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total Water Use in Industrial (2017)",
    "width": "container",
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/TingHanGan/utilisationOfWaterAUS/main/world_map.json",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries"
      }
    },
    "projection": {
      "type": "equirectangular"
    },
    "params": [
          {
            "name": "Continent_selection",
            "bind": {
              "input": "select",
              "options": [
                null,
                "Americas",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "labels":[
                "Show All",
                "Americas",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "name": "Continent Selection: "
            }
          }
        ],
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/TingHanGan/utilisationOfWaterAUS/main/world_map.json",
          "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
          }
        },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white"
        },
        "encoding": {
          "tooltip": null
        }
      },
      {
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/TingHanGan/utilisationOfWaterAUS/main/Datasets/world_water_use_clean.csv"
              },
              "key": "Country",
               "fields": ["Industrial", "Continent"]
            }
          },
          {"filter": "Continent_selection == null || datum.Continent == Continent_selection"}
        ],
        "mark": {"type": "geoshape"},
        "encoding": {
          "color": {
            "field": "Industrial",
            "type": "quantitative",
            "scale": {"type": "log"},
            "legend": null
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Industrial", "type": "quantitative"}
          ]
        }
      }
    ]
  }